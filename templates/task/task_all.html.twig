{% extends "base.html.twig" %}

{% block title %}Liste de toutes les tâches{% endblock %}

{% block body %}
<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-wrap -mx-4 -my-8 gap-4">
            {# Boucle pour répéter le card article #}
            {% for task in tasks %}
                <p>{{ task.expiryDate | date('d/m/Y') }}</p>
                <p>{{ task.title }}</p>

                <p>{{ task.content }}</p>
                <p>{{ task.statut }}</p>
                
            {% endfor %}
            {# {% for i in 0..200 %}
                
            {% endfor %} #}
        </div>
    </div>
</section>
{% endblock %}